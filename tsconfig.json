{
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,
    "allowJs": false,
    "checkJs": false,
    "alwaysStrict": true,
    "declaration": false,
    "sourceMap": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "target": "es2020",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@cmds/*": ["../lib/cmds/*"],
      "@events": ["../lib/events/index"],
      "@args/*": ["../lib/args/*"],
      "@utils/*": ["../lib/utils/*"],
      "@view/*": ["../lib/view/*"],
      "@ux/*": ["../lib/ux/*"],
      "@db/*": ["../lib/db/*"],
      "@plugins/*": ["../src/plugins/*"],
      "@root/*": ["../src/*"]
    }
  },
  "include": [
    "src/**/*",
    "shims/**/*",
    "lib/**/*"
  ],
  "exclude": ["node_modules", "lib/old/**/*", "lib/old/pl_old/**/*", "lib/ux/**/*"]
}