{
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,
    "allowJs": false,
    "checkJs": false,
    "alwaysStrict": true,
    "declaration": false,
    "sourceMap": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "target": "es2020",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@core/*": [
        "../packages/core/*"
      ],
      "@cmds/*": [
        "../packages/cmds/*"
      ],
      "@utils/*": [
        "../packages/utils/*"
      ],
      "@view/*": [
        "../packages/view/*"
      ],
      "@ux/*": [
        "../packages/ux/*"
      ],
      "@root/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "shims/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}